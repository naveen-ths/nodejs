<% include ../layouts/header %>
<div class="container-fluid main">
    <div class="row col-padding-fix">
        <div class="col-sm-8">
            <form class="form-horizontal" method="post" action="/customers/update" name="add-customer">
                <input type="hidden" name="id" value="<%=data[0].id%>" />
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input maxlength="128" type="text" name="name" class="form-control" id="name" value="<%=data[0].name%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input maxlength="128" type="email" name="email" class="form-control" id="email" value="<%=data[0].email%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                        <input maxlength="20" type="text" name="phone" class="form-control" id="phone" value="<%=data[0].phone%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone" class="col-sm-2 control-label">Address</label>
                    <div class="col-sm-10">
                        <textarea name="address" rows="5" cols="10" class="form-control"><%=data[0].address%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Update</button>
                        <a href="/customers/" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../layouts/footer %>